<h1><%= @market.name %></h1>

<h3>Location:</h3>
<% @market.addresses.each do |address| %>
  <p><%= address.street_address_1 %></p>
  <p><%= address.street_address_2 %></p>
  <p><%= address.city %>, <%= address.state %> <%= address.zip %></p>
<% end %>
<br>

<h3>Operating Hours:</h3>
<%= @market.operating_hours %>
<br></br>

<% if current_vendor && current_vendor.admin? %>
  <%= render "vendors/filter" %>

  <%= link_to "Edit this Market", edit_market_path(@market) %>
  <%= link_to "Delete this Market", @market, method: "delete" %>

<% elsif current_vendor %>
  <%= render "vendors/filter" %>
  <% @reviews.each do |review| %>
    <p><%= review.content %></p>
    <p><%= review.rating %></p>
    <p><%= review.vendor.shop_name %></p>
  <% end %>

<% else %>
  <p><%= link_to "Sign Up", new_vendor_registration_path %> or <%= link_to "Log In", new_vendor_session_path %> to see the Vendors at this market</p>
<% end %>
