<% if flash[:errors] %>
  <div id="error_explanation">
    <h3>
      <%= pluralize(flash[:errors].count, "error") %>
      prohibited this article from being saved:
    </h3>

    <ul>
      <% flash[:errors].each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
