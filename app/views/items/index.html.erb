<h1>Inventory</h1>

<table>
  <tr>
    <th>Item Name</th>
    <th>Category</th>
    <th>Price</th>
    <th>Inventory</th>
  </tr>

  <% @items.each do |item| %>
    <tr>
      <td><%= item.name %></td>
      <td><%= item.category.title %></td>
      <td><%= number_to_currency(item.price.to_f/100) %></td>
      <td><%= item.inventory %></td>
    </tr>
  <% end %>
</table>
<br>

<%= link_to "Add inventory", new_item_path %>
