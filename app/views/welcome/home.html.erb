<h1>Farmers' Markets</h1>

<% @markets.each do |market| %>
  <p><%= link_to "#{market.name}", market_path(market), id: "js-marketShow", data: { id: "#{market.id}" } %></p>
  <div id="market_info">
    <h1 id="market_name"></h1>

    <h3 id="market_location"></h3>
      <p id="street_address_1"></p>
      <p id="street_address_2"></p>
      <p id="city_state_zip"></p>

    <h3 id="market_hours"></h3>
  </div>
<% end %>
